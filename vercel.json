{
    "version": 2,
    "framework": null,
    "outputDirectory": "public",
    "buildCommand": null,
    "installCommand": "npm install",
    "functions": {
        "api/*.js": {
            "maxDuration": 30,
            "memory": 512
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}